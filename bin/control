#!/bin/bash -e
source $OPENSHIFT_CARTRIDGE_SDK_BASH

echo "Entering control script with $1"

OPENSHIFT_NEWRELIC_SYSMOND_CONFIG=${OPENSHIFT_NEWRELIC_SYSMOND_DIR}conf/nrsysmond.cfg

function update_config() {
  (cat ${OPENSHIFT_NEWRELIC_SYSMOND_CONFIG} | envsubst) > /tmp/newrelicconf.tmp && mv /tmp/newrelicconf.tmp ${OPENSHIFT_NEWRELIC_SYSMOND_CONFIG}
  chmod 0600 ${OPENSHIFT_NEWRELIC_SYSMOND_CONFIG}
}

function start() {
  echo "Preparing to start NewRelic Sysmond"
  
  if [ -z "${NEWRELIC_LICENSE_KEY}" ]; then
    client_result "ERROR: You need to set the NEWRELIC_LICENSE_KEY before starting cartridge."
    client_result "       rhc env set NEWRELIC_LICENSE_KEY=key"
    client_result "       rhc cartridge restart newrelic-sysmond -a ${OPENSHIFT_APP_NAME}"
    client_result
  else
    echo "Starting NewRelic-sysmond cartridge"
    update_config
	if [ ! -f ${OPENSHIFT_NEWRELIC_SYSMOND_CONFIG} ]; then
      client_result "ERROR: Unabled to locate NewRelic config file."
      exit 1
    fi
    ${OPENSHIFT_NEWRELIC_SYSMOND_DIR}bin/nrsysmond \
	-c ${OPENSHIFT_NEWRELIC_SYSMOND_CONFIG}
  fi
}

function stop() {
    echo "Stopping NewRelic-sysmond cartridge"
	killall nrsysmond
}

function restart() {
	stop
    start
}

case "$1" in
  start)     start ;;
  stop)      stop ;;
  restart)   restart ;;
  *)         exit 0
esac